<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf,UselessParent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">
               <TextView
                   android:padding="10dp"
                   android:drawableStart="@drawable/baseline_search_24"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:text="@string/search"
                   android:textStyle="bold"
                   tools:ignore="UseCompatTextViewDrawableXml" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/first"
                android:contentDescription="@string/first"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                  android:src="@drawable/baseline_qr_code_scanner_24"
                    android:contentDescription="@string/scan"/>
                <ImageView
                    android:layout_marginStart="40dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                   android:src="@drawable/baseline_local_phone_24"
                    android:contentDescription="@string/phone"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/contact"
                    android:contentDescription="@string/contact"
                    android:layout_marginStart="40dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_account_balance_24"
                    android:contentDescription="@string/bank"
                    android:layout_marginStart="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:layout_marginStart="40dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/transfer"
                    android:contentDescription="@string/transfer"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/self"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/self"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bill"
                        android:contentDescription="@string/bill"
                        android:layout_marginStart="50dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                   android:src="@drawable/baseline_phone_android_24"
                    android:layout_marginStart="50dp"
                    android:contentDescription="@string/mobile"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upi"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/self"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:layout_marginStart="40dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/people"
                android:textStyle="bold"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ahesan"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/ahesan"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/shahan"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/shahan"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ashar"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/ashar"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/aman"
                       android:scaleType="fitXY"
                        android:contentDescription="@string/ashar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ahesan"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shahan"
                    android:layout_marginStart="55dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ashar"
                    android:layout_marginStart="60dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aman"
                    android:layout_marginStart="55dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bills"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/toll"
                        android:contentDescription="@string/fast"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/method"
                        android:contentDescription="@string/credit"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/online"
                        android:contentDescription="@string/dth"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/credit"
                     android:textStyle="bold"
                     android:layout_marginStart="42dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dth"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/offer"
              android:textStyle="bold"
              android:layout_margin="10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cup"
                        android:contentDescription="@string/dth"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gift"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/ashar"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/refrells"
                        android:contentDescription="@string/dth"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reward"
                    android:layout_marginStart="34dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Offers"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ref"
                    android:textStyle="bold"
                    android:layout_marginStart="55dp"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v"
                android:textStyle="bold"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/se"
                  android:layout_marginStart="15dp"
                  android:textStyle="bold"
                  android:drawablePadding="15dp"
                  android:drawableStart="@drawable/baseline_rotate_left_24"
                  tools:ignore="UseCompatTextViewDrawableXml" />
                  <TextView
                      android:layout_marginTop="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/check"
                      android:textStyle="bold"
                      android:layout_marginStart="15dp"
                      android:drawablePadding="15dp"
                      android:drawableStart="@drawable/baseline_account_balance_24"
                      tools:ignore="UseCompatTextViewDrawableXml" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/invite"
                    android:contentDescription="@string/se"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite"
                    android:textStyle="bold"
                    android:layout_margin="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
